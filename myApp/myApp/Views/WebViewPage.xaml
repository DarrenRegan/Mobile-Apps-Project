<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="myApp.Views.WebViewPage"
             Title="Moodle">

    <StackLayout Margin="2">
        <StackLayout Orientation="Horizontal">
            <Button Text="&lt;" HorizontalOptions="Start" Clicked="OnBackButtonClicked" WidthRequest="40" HeightRequest="40"/>
            <Button Text="&gt;" HorizontalOptions="Start" Clicked="OnForwardButtonClicked" WidthRequest="40" HeightRequest="40"/>
            <Button Text="R" HorizontalOptions="Start" Clicked="OnReloadButtonClicked" WidthRequest="40" HeightRequest="40"/>
        </StackLayout>
        <WebView x:Name="moodle" WidthRequest="1000" HeightRequest="1000"/>
    </StackLayout>

</ContentPage>