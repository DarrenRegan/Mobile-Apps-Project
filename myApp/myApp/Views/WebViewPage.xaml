<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="myApp.Views.WebViewPage">

    <StackLayout Margin="10">
        <StackLayout Orientation="Horizontal">
            <Button Text="Back" HorizontalOptions="Start" Clicked="OnBackButtonClicked" />
            <Button Text="Foward" HorizontalOptions="Start" Clicked="OnForwardButtonClicked" />
            <Button Text="Reload" HorizontalOptions="Start" Clicked="OnReloadButtonClicked" />
        </StackLayout>
        <WebView x:Name="moodle" WidthRequest="1500" HeightRequest="1500"/>
    </StackLayout>

</ContentPage>